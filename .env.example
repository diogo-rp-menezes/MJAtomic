# .env.example

# --- Configuração do Docker ---
# Deixe em branco se usar Docker Desktop local
MJATOMIC_DOCKER_HOST_IP="192.168.1.9"
MJATOMIC_DOCKER_USER="dockeruser"

# --- Chaves de API (Obrigatórias) ---
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
GOOGLE_API_KEY=""

# --- Configurações do Agente ---
AGENT_MODEL="gpt-4-turbo"
LOG_LEVEL="INFO"
LOCAL_WORKSPACE_PATH="./workspace"
WORKSPACE_PATH="./workspace"

# --- Configuração do Redis ---
# Host onde o Redis está rodando (geralmente o mesmo do Docker)
REDIS_HOST="192.168.1.9"

# --- Configuração do Banco de Dados Vetorial ---
POSTGRES_URL="postgresql+psycopg://devagent:atomicpass@192.168.1.9:5433/devagent_db"
PGVECTOR_COLLECTION_NAME="mjatomic_codebase"
ENABLE_VECTOR_MEMORY="true"

# --- Configuração de Embeddings ---
EMBEDDING_PROVIDER="google"
EMBEDDING_MODEL="text-embedding-3-small"

# --- Configuração de Modelos ---
LLM_MODEL_SMART=""
LLM_MODEL_FAST=""
