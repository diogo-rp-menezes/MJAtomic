# --- Database Configuration ---
POSTGRES_USER=devagent
POSTGRES_PASSWORD=atomicpass
POSTGRES_DB=devagent_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# --- Redis Configuration ---
REDIS_HOST=redis
REDIS_PORT=6379

# --- LLM Configuration ---
# Options: "google" or "ollama"
LLM_PROVIDER="google"

# --- Google Gemini Configuration ---
GOOGLE_API_KEY="your_google_api_key_here"

# --- Ollama Configuration ---
# Base URL for Ollama service (usually http://host.docker.internal:11434 for local access from container)
OLLAMA_BASE_URL="http://host.docker.internal:11434"

# --- Model Configuration ---
# Define the LLM model for each agent.
# Can be a Google model (e.g., "gemini-1.5-pro") or an Ollama model (e.g., "llama3.2").
ORCHESTRATOR_MODEL="llama3.2"
ORCHESTRATOR_BASE_URL="http://host.docker.internal:11434"
FULLSTACK_MODEL="gemini-1.5-flash"
REVIEWER_MODEL="gemini-1.5-flash"
ARCHITECT_MODEL="gemini-1.5-flash"

# --- Workspace Configuration ---
# Path inside the container
LOCAL_WORKSPACE_PATH="/app/workspace"
# Path on the host machine (for Docker-in-Docker mounts)
HOST_WORKSPACE_PATH="/absolute/path/to/your/workspace"
