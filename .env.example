# .env.example

# Chaves de API (Obrigatórias)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
GOOGLE_API_KEY=""

# Configurações do Agente
AGENT_MODEL="gpt-4-turbo"
LOG_LEVEL="INFO"
WORKSPACE_PATH="./workspace"

# --- Configuração do Banco de Dados Vetorial ---
# URL de conexão para o PostgreSQL com pgvector.
# Formato: postgresql+psycopg://<user>:<password>@<host>:<port>/<dbname>
POSTGRES_URL="postgresql+psycopg://devagent:atomicpass@localhost:5433/dev_agent_db"

# Nome da coleção (tabela) onde os vetores serão armazenados.
PGVECTOR_COLLECTION_NAME="mjatomic_codebase"

# --- Configuração de Embeddings ---
# Provedor de embeddings a ser usado ('google' ou 'openai')
EMBEDDING_PROVIDER="google"
# Modelo de embedding (relevante para OpenAI, ex: 'text-embedding-3-small')
EMBEDDING_MODEL="text-embedding-3-small"
